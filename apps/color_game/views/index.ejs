<!doctype html>
<html>
<style>
div.smiley
{
  background:url(https://s3.amazonaws.com/alexagamesmedia/smiley.png) no-repeat center center;
  height:200px;
  width:200px;
}
</style>
  <head>
    <title>Colors Game</title>
  </head>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
      var socket = io();
      socket.on('change_color', function(color, box) {
        $("#box"+box).css("background-color", color);
        $("#box"+box).css("visibility", 'visible');
      });
      socket.on('start_game', function() {
        $("#start_label").hide();
        $("#box1").css("background-color", 'white');
        $("#box1").find('img').attr('src', "");
        $("#box2").css("background-color", 'white');
        $("#box2").find('img').attr('src', "");
        $("#box3").css("background-color", 'white');
        $("#box3").find('img').attr('src', "");
      });
      socket.on('correct', function(box) {
        $("#box"+box).find('img').attr('src', "https://s3.amazonaws.com/alexagamesmedia/smiley.png");
        $("#box"+box).css("background-color", 'white');
      });
      socket.on('wrong', function(box) {
        $("#box"+box).find('img').attr('src', "https://s3.amazonaws.com/alexagamesmedia/sad.jpg");
        $("#box"+box).css("background-color", 'white');
      });
      
    </script>
    <style>
    .floating-box {
      display: inline-block;
      width: 200px;
      height: 200px;
      margin: 30px;
      border:10px solid #000000;
      visibility: hidden;
    }
    .center {
      position: absolute;
      width: 900px;
      height: 800px;
      top: 50%;
      left: 30%;
      margin: -100px 0 0 -150px;
    }
    </style>
    <body style="width: 100%; height: 100%;">
    <div class="center">
      <div id="box1" class="floating-box" >
         <img src="" width="200" height="200"</img>
      </div>
      <div id="box2" class="floating-box" >
         <img src="" width="200" height="200"</img>
      </div>
      <div id="box3" class="floating-box" >
         <img src="" width="200" height="200"</img>
      </div>
    </div>
    <div style="top: 50%; left: 30%; position: absolute;">
         <font size="120"><div id="start_label">Say "Alexa start colors game!"</div></font>
    </div>
  </body>
</html>

