<!doctype html>
<html>
<style>
div.smiley
{
  background:url(https://s3.amazonaws.com/alexagamesmedia/smiley.png) no-repeat center center;
  height:200px;
  width:200px;
}
</style>
  <head>
    <title>Colors Game</title>
  </head>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
      var socket = io();
      socket.on('change_color', function(color) {
        document.body.style.backgroundColor = color;
      });
      socket.on('start_game', function() {
        $("#start_label").hide();
        $("#smiley").hide();
      });
      socket.on('smiley', function() {
        document.body.style.backgroundColor = 'white';
        $("#smiley").show();
      });
    </script>
    <body style="width: 100%; height: 100%;">
    <div style="top: 10%; left: 30%; position: absolute;" id="smiley" class="hidden">
         <img src="https://s3.amazonaws.com/alexagamesmedia/smiley.png"</img>
    </div>
    <div style="top: 50%; left: 30%; position: absolute;">
         <font size="120"><div id="start_label">Say "Alexa start color game!"</div></font>
    </div>
  </body>
</html>

